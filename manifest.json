{
  "manifest_version": 3,
  "name": "Oracle Identity Scraper",
  "version": "1.1.0",
  "description": "Captura dados de perfis do LinkedIn, gera mensagem com Gemini e salva leads no Supabase.",
  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.supabase.co/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.stripe.com/*",
    "https://js.stripe.com/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "Oracle Validator",
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["src/content/linkedin.js"]
    }
  ]
}
